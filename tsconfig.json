  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": ".vercel/output"
  },
  "include": ["api/**/*", "backend/src/**/*"],
  "exclude": ["node_modules", "frontend"]
}
